{
    "name": "SLOVARonline",
    "description": "SLOVARonline - the largest dictionaries database online",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icon-16x16.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    },
    "browser_action": {
        "default_title": "Открыть сайт slovaronline.com в новой вкладке",
        "default_icon" : "icon-128x128.png",
        "default_popup": "public/index.html"
    },
    "permissions": ["tabs"],
    "background":{
        "scripts": ["background.js"]
    }
}
